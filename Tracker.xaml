                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Width" Value="Auto"/>
                    <Setter Property="IsSelected" Value="{Binding Content.IsSelected, Mode=TwoWay, RelativeSource={RelativeSource Self}}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="75"/>


                        </Grid.ColumnDefinitions>

                        <Label Content="{Binding Name}" Grid.Column="0" HorizontalContentAlignment="Stretch" Foreground="White" Background="Transparent" BorderThickness="0,0,1,1" MouseDoubleClick="ListBoxItemText_Copy"/>
                        <Label Content="{Binding RFC}" Grid.Column="1" HorizontalContentAlignment="Stretch" Foreground="White"  Background="Transparent" BorderThickness="0,0,1,1" MouseDoubleClick="ListBoxItemText_Copy"/>
                        <Label Content="{Binding RFCID}" Grid.Column="2" HorizontalContentAlignment="Stretch" Foreground="White" Background="Transparent" BorderThickness="0,0,1,1" MouseDoubleClick="ListBoxItemText_Copy"/>
                        <Label Content="{Binding Monday}" Grid.Column="3" HorizontalContentAlignment="right" Foreground="White" Background="Transparent" BorderThickness="0,0,1,1" MouseDoubleClick="ListBoxItem_Copy"  MouseEnter="Label_MouseEnter">
                        </Label>
                        <Label Content="{Binding Tuesday}" Grid.Column="4" HorizontalContentAlignment="right" Foreground="White" Background="Transparent" BorderThickness="0,0,1,1" MouseDoubleClick="ListBoxItem_Copy" MouseEnter="Label_MouseEnter">
                        </Label>
                        <Label Content="{Binding Wednesday}" Grid.Column="5" HorizontalContentAlignment="right" Foreground="White" Background="Transparent" BorderThickness="0,0,1,1" MouseDoubleClick="ListBoxItem_Copy" MouseEnter="Label_MouseEnter">
                        </Label>
                        <Label Content="{Binding Thursday}" Grid.Column="6" HorizontalContentAlignment="right" Foreground="White" Background="Transparent" BorderThickness="0,0,1,1" MouseDoubleClick="ListBoxItem_Copy" MouseEnter="Label_MouseEnter">
                        </Label>
                        <Label Content="{Binding Friday}" Grid.Column="7" HorizontalContentAlignment="right" Foreground="White" Background="Transparent" BorderThickness="0,0,1,1" MouseDoubleClick="ListBoxItem_Copy" MouseEnter="Label_MouseEnter">
                        </Label>
                        <Label Content="{Binding Saturday}" Grid.Column="8" HorizontalContentAlignment="right" Foreground="White" Background="Transparent" BorderThickness="0,0,1,1" MouseDoubleClick="ListBoxItem_Copy" MouseEnter="Label_MouseEnter">
                        </Label>
                        <Label Content="{Binding Sunday}" Grid.Column="9" HorizontalContentAlignment="right" Foreground="White" Background="Transparent" BorderThickness="0,0,0,1" MouseDoubleClick="ListBoxItem_Copy" MouseEnter="Label_MouseEnter">
                        </Label>

                        <Border Grid.ColumnSpan="10" BorderBrush="White" BorderThickness="0,0,0,0.1" HorizontalAlignment="Stretch" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>




        <Calendar x:Name="CustomCalendar" SelectedDatesChanged="CustomCalendar_SelectedDatesChanged" MouseLeave="CustomCalendar_MouseLeave" Grid.Column="2" Grid.ColumnSpan="2" Height="330" Margin="0,0,0,0" VerticalAlignment="Center" Width="400" Style="{DynamicResource CalendarStyle1}" CalendarButtonStyle="{DynamicResource CalendarButtonStyle1}" CalendarDayButtonStyle="{DynamicResource CalendarDayButtonStyle1}" CalendarItemStyle="{DynamicResource CalendarItemStyle1}"/>

        <Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
        

        <Button Grid.Column="0" Grid.Row="2" Margin="10,0,30,0"  Background="#FF0E0E0E" FontSize="16" Height="40"  Foreground="White" Content="Zeiteinträge" x:Name="TimeEntriesPageButton" Click="TimeEntriesPageButton_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
            <Button Grid.Column="1" Grid.Row="2" Margin="10,0,30,0" Background="#FF0E0E0E" FontSize="16" Height="40" Foreground="White" Content="Projekte" x:Name="ProjectsPageButton" Click="ProjectsPageButton_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
            <Button Grid.Column="2" Grid.Row="2" Margin="10,0,30,0" Background="#FF0E0E0E" FontSize="16" Height="40" Foreground="White" Content="Projektarchiv" x:Name="ProjectsArchiveButton" Click="ProjectsArchiveButton_Click">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button Grid.Column="3" Grid.Row="2" Margin="10,0,10,0" Background="#FF0E0E0E" FontSize="16" Height="40" Foreground="White" x:Name="SettingsPageButton" Click="SettingsPageButton_Click">
                <Image Source="/images/gear.png" Height="30"/>
